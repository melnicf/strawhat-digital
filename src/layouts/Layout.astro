---
import "../styles/global.css";
import HatAnimation from "../components/ui/HatAnimation";
import HeroBoldLazy from "../components/hero/HeroBoldLazy";
import SmoothScroll from "../components/ui/SmoothScroll";
import type { Locale } from "../utils/i18n";
import { getTranslations } from "../utils/i18n";

interface Props {
  title?: string;
  description?: string;
  locale?: Locale;
}

const {
  title: pageTitle,
  description: pageDescription,
  locale: localeProp,
} = Astro.props;
const locale = localeProp ?? ("en" as Locale);
const t = getTranslations(locale);

const siteTitle = t("site.name");
const siteDescription = t("site.description");
const title = pageTitle ? `${pageTitle} | ${siteTitle}` : siteTitle;
const description = pageDescription ?? siteDescription;
const canonicalUrl = Astro.url.href;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="generator" content={Astro.generator} />
    <!-- Favicon: hat icon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <script is:inline>
      // Set theme immediately to prevent flash
      (function () {
        const theme = localStorage.getItem("theme");
        const initialTheme = theme || "light";
        document.documentElement.setAttribute("data-theme", initialTheme);
      })();
    </script>
  </head>
  <body>
    <SmoothScroll client:load />
    <HeroBoldLazy client:load />
    <HatAnimation client:load />
    <slot />
  </body>
</html>
