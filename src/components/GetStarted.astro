---
// Get Started / Contact section component
import ContactForm from "./ui/ContactForm";
import { getTranslations } from "../utils/i18n";
import type { Locale } from "../utils/i18n";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);

const formTranslations = {
  name: t("form.name"),
  namePlaceholder: t("form.namePlaceholder"),
  email: t("form.email"),
  emailPlaceholder: t("form.emailPlaceholder"),
  projectType: t("form.projectType"),
  budgetRange: t("form.budgetRange"),
  budgetPlaceholder: t("form.budgetPlaceholder"),
  budgetUnder10k: t("form.budgetUnder10k"),
  budget10k25k: t("form.budget10k25k"),
  budget25k50k: t("form.budget25k50k"),
  budget50k100k: t("form.budget50k100k"),
  budgetOver100k: t("form.budgetOver100k"),
  budgetNotSure: t("form.budgetNotSure"),
  projectTypeWeb: t("form.projectTypeWeb"),
  projectTypeMobile: t("form.projectTypeMobile"),
  projectTypeApi: t("form.projectTypeApi"),
  projectTypeDesign: t("form.projectTypeDesign"),
  projectTypeConsulting: t("form.projectTypeConsulting"),
  projectTypeOther: t("form.projectTypeOther"),
  tellMeAbout: t("form.tellMeAbout"),
  messagePlaceholder: t("form.messagePlaceholder"),
  sendMessage: t("form.sendMessage"),
  messageSent: t("form.messageSent"),
  thanksReachOut: t("form.thanksReachOut"),
  sendAnother: t("form.sendAnother"),
  privacyNote: t("form.privacyNote"),
  errorName: t("form.errorName"),
  errorNameMin: t("form.errorNameMin"),
  errorEmail: t("form.errorEmail"),
  errorMessage: t("form.errorMessage"),
  errorMessageMin: t("form.errorMessageMin"),
  errorProjectType: t("form.errorProjectType"),
  errorFillRequired: t("form.errorFillRequired"),
  errorTooMany: t("form.errorTooMany"),
  errorServer: t("form.errorServer"),
  errorGeneric: t("form.errorGeneric"),
};
---

<section id="get-started" class="relative py-32 md:py-48">
  <!-- Subtle background pattern -->
  <div
    class="pointer-events-none absolute inset-0 overflow-hidden opacity-[0.015]"
  >
    <div
      class="absolute inset-0"
      style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 48px 48px;"
    >
    </div>
  </div>

  <!-- Hat landing spot - final resting place (LEFT on mobile, LEFT on desktop) -->
  <div
    data-hat-landing="get-started"
    class="absolute top-28 left-8 flex size-16 items-center justify-center sm:left-12 md:top-36 md:left-20"
  >
    <div class="border-strawhat-amber size-4 rounded border-2 opacity-60"></div>
  </div>

  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="space-y-16">
      <!-- Section Header -->
      <div class="relative space-y-6">
        <div class="flex w-fit items-center gap-4 justify-self-end md:w-full">
          <div class="bg-strawhat-yellow h-px w-12"></div>
          <span
            class="text-strawhat-yellow text-sm font-medium tracking-widest uppercase"
            >{t("getStarted.label")}</span
          >
        </div>
        <h2
          class="text-strawhat-text text-4xl/tight font-light tracking-tight md:text-6xl"
        >
          {t("getStarted.title")}
        </h2>
        <p
          class="text-strawhat-text-light max-w-2xl text-lg/relaxed font-light"
        >
          {t("getStarted.intro")}
        </p>
      </div>

      <!-- Two column layout: mobile = timeline, form, prefer email; desktop = (timeline + prefer email) | form -->
      <div
        class="grid auto-rows-min grid-cols-1 items-start gap-12 lg:grid-cols-2 lg:gap-16"
      >
        <!-- What to expect - simplified timeline (mobile: 1st, desktop: left col row 1) -->
        <div class="order-1 space-y-8 lg:col-start-1 lg:row-start-1">
          <h3 class="text-strawhat-text text-lg font-medium tracking-tight">
            {t("getStarted.whatNext")}
          </h3>

          <div class="relative space-y-6 pl-6">
            <!-- Timeline line -->
            <div
              class="absolute inset-y-2 left-[3px] w-px bg-zinc-200 dark:bg-zinc-800"
            >
            </div>

            <div class="relative">
              <div
                class="bg-strawhat-yellow absolute top-1.5 -left-6 size-1.5 rounded-full"
              >
              </div>
              <p class="text-strawhat-text text-sm font-medium">
                {t("getStarted.response24h")}
              </p>
            </div>

            <div class="relative">
              <div
                class="bg-strawhat-yellow/60 absolute top-1.5 -left-6 size-1.5 rounded-full"
              >
              </div>
              <p class="text-strawhat-text text-sm font-medium">
                {t("getStarted.discoveryCall")}
              </p>
            </div>

            <div class="relative">
              <div
                class="bg-strawhat-yellow/30 absolute top-1.5 -left-6 size-1.5 rounded-full"
              >
              </div>
              <p class="text-strawhat-text text-sm font-medium">
                {t("getStarted.customProposal")}
              </p>
            </div>
          </div>
        </div>

        <!-- Form (mobile: 2nd, desktop: right col) -->
        <div
          id="contact-form"
          class="order-2 scroll-mt-24 lg:col-start-2 lg:row-span-2 lg:row-start-1"
        >
          <ContactForm client:visible translations={formTranslations} />
        </div>

        <!-- Alternative contact (mobile: 3rd/last, desktop: left col row 2) -->
        <div class="order-3 space-y-3 lg:col-start-1 lg:row-start-2">
          <p class="text-strawhat-text-light text-sm">
            {t("getStarted.preferEmail")}
          </p>
          <a
            href="mailto:hello@strawhat.digital"
            class="border-strawhat-yellow text-strawhat-yellow hover:border-strawhat-amber hover:text-strawhat-amber inline-block border-b pb-0.5 text-base font-light tracking-wide transition-all"
          >
            hello@strawhat.digital
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
