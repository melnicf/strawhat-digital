---
const currentYear = new Date().getFullYear();

const navLinks = [
  { href: "#services", label: "Services" },
  { href: "#case-studies", label: "Work" },
  { href: "#why-us", label: "Why Us" },
  { href: "#founder", label: "About" },
];
---

<footer class="border-strawhat-text/10 bg-strawhat-bg border-t">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div
      class="flex flex-col items-center gap-8 md:flex-row md:justify-between"
    >
      <!-- Logo & Tagline -->
      <div class="flex flex-col items-center gap-2 md:items-start">
        <a
          href="/"
          class="text-strawhat-text text-lg font-light tracking-wider transition-opacity hover:opacity-80"
        >
          Straw Hat Digital
        </a>
        <p class="text-strawhat-text-light text-sm font-light tracking-wide">
          Expert execution. Direct partnership.
        </p>
      </div>

      <!-- Navigation Links -->
      <nav class="flex flex-wrap justify-center gap-6 md:gap-8">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class="text-strawhat-text-light hover:text-strawhat-yellow text-sm font-light tracking-wider transition-colors"
            >
              {link.label}
            </a>
          ))
        }
      </nav>

      <!-- Contact -->
      <div class="flex flex-col items-center gap-2 md:items-end">
        <a
          href="mailto:hello@strawhat.digital"
          class="text-strawhat-text-light hover:text-strawhat-yellow text-sm font-light tracking-wider transition-colors"
        >
          hello@strawhat.digital
        </a>
        <a
          href="#get-started"
          class="text-strawhat-yellow hover:text-strawhat-amber text-sm font-light tracking-wider transition-colors"
        >
          Get Started →
        </a>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="border-strawhat-text/5 mt-10 flex flex-col items-center justify-between gap-4 border-t pt-6 md:flex-row"
    >
      <p class="text-strawhat-text-light/60 text-xs font-light tracking-wider">
        © {currentYear} Straw Hat Digital. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        <a
          href="/privacy"
          class="text-strawhat-text-light/60 hover:text-strawhat-text-light text-xs font-light tracking-wider transition-colors"
        >
          Privacy
        </a>
        <a
          href="/terms"
          class="text-strawhat-text-light/60 hover:text-strawhat-text-light text-xs font-light tracking-wider transition-colors"
        >
          Terms
        </a>
      </div>
    </div>
  </div>
</footer>
